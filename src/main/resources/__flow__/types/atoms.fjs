// @flow

declare type AtomType =
  | 'guide'
  | 'profile'
  | 'qanda'
  | 'timeline'
  | 'storyquestions'
  | 'explainer';

declare type Atom = { atomId: string
                    , start: (a: Atom) => Promise<void>
                    , stop: () => void
                    };

declare type AtomBuilder<A> = HTMLElement => Coeval<Atom & A>;

declare type AtomMaker<A> = Services => AtomBuilder<A>;
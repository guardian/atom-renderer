{
  "name": "@guardian/atom-renderer",
  "version": "0.9.0",
  "description": "Platform-agnostic rendering library for atoms",
  "repository": "https://github.com/guardian/atom-renderer.git",
  "author": "Regis Kuckaertz <regis.kuckaertz@theguardian.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "autoprefixer": "^7.1.6",
    "css-loader": "^0.28.7",
    "postcss-css-variables": "^0.8.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "recursive-copy": "^2.0.7",
    "sass-loader": "^6.0.6",
    "sass-mq": "^3.3.2",
    "style-loader": "^0.19.0",
    "webpack": "^3.5.6"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.58.0",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.1",
    "postcss-variables-loader": "^4.0.0",
    "prettier": "^1.8.2",
    "uglifyjs-webpack-plugin": "^1.0.1"
  },
  "scripts": {
    "build": "babel src/main/resources",
    "flow": "flow",
    "lint": "eslint --ext .fjs src/main/resources",
    "copy": "node ./tools/copy.js",
    "postcss": "postcss build/*/*/*.css -u autoprefixer",
    "apps": "yarn run appsJS; yarn run appsCSS",
    "appsJS": "NODE_ENV=production webpack --config apps.config.js",
    "appsCSS": "node-sass --output-style compressed --include-path node_modules/sass-mq --include-path src/main/resources/css --output build/ src/main/resources/; yarn run postcss --dir build/",
    "frontend": "yarn run frontendJS; yarn run copy; yarn run frontendCSS",
    "frontendJS": "NODE_ENV=production webpack --config frontend.config.js",
    "frontendCSS": "node-sass --output-style compressed --include-path node_modules/sass-mq --include-path src/main/resources/css --output dist/ src/main/resources/"
  }
}

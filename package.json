{
  "name": "@guardian/atom-renderer",
  "version": "1.2.2",
  "description": "Platform-agnostic rendering library for atoms",
  "repository": "https://github.com/guardian/atom-renderer.git",
  "author": "Regis Kuckaertz <regis.kuckaertz@theguardian.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14.16.0"
  },
  "dependencies": {
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-flow": "^7.0.0",
    "autoprefixer": "10.2.5",
    "babel-core": "^7.0.0-bridge.0",
    "css-loader": "^5.2.4",
    "postcss-css-variables": "^0.17.0",
    "postcss-import": "^14.0.1",
    "postcss-loader": "^5.2.0",
    "recursive-copy": "^2.0.7",
    "sass-loader": "^11.0.1",
    "sass-mq": "^5.0.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.36.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.6",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.150.0",
    "postcss": "^8.1.0",
    "postcss-cli": "^8.3.1",
    "postcss-variables-loader": "^6.0.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.12",
    "terser-webpack-plugin": "^5.1.1",
    "webpack-cli": "^4.6.0"
  },
  "scripts": {
    "build": "babel core/src/main/resources",
    "flow": "flow",
    "lint": "eslint --ext .fjs core/src/main/resources",
    "copy": "node ./tools/copy.js",
    "postcss": "postcss build/*/*/*.css -u autoprefixer",
    "apps": "yarn run appsJS; yarn run appsCSS; yarn run appsEmailCSS",
    "appsJS": "NODE_ENV=production webpack --config apps.config.js",
    "appsCSS": "sass --style compressed --load-path node_modules/sass-mq --load-path core/src/main/resources/css core/src/main/resources/:build/ && postcss build/*/*/*.css -u autoprefixer --dir build/",
    "appsEmailCSS": "sass --style compressed --load-path node_modules/sass-mq --load-path core/src/main/resources/css --load-path email/src/main/resources/css email/src/main/resources/:build/ && postcss build/*/*/*.css -u autoprefixer --dir build/",
    "frontend": "yarn run frontendJS; yarn run copy; yarn run frontendCSS",
    "frontendJS": "NODE_ENV=production webpack --config frontend.config.js",
    "frontendCSS": "sass --style compressed --load-path node_modules/sass-mq --load-path core/src/main/resources/css core/src/main/resources/:dist/"
  }
}
